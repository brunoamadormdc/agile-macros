# Build Stage
FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci --quiet
COPY . .

# Production Stage
FROM node:20-alpine
WORKDIR /app
RUN apk add --no-cache dumb-init
RUN addgroup -S appgroup && adduser -S appuser -G appgroup

COPY --from=builder /app ./
RUN chown -R appuser:appgroup /app

USER appuser
EXPOSE 3001
CMD ["dumb-init", "node", "src/server.js"]
